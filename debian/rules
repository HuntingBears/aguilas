#!/usr/bin/make -f

%:
	@dh ${@}

override_dh_auto_build:

	@$(MAKE) DESTDIR=$(CURDIR)/debian/aguilas

override_dh_auto_install:

	@$(MAKE) DESTDIR=$(CURDIR)/debian/aguilas copy
	@dh_install debian/conf/apache.conf /etc/aguilas/
	@dh_install debian/conf/lighttpd.conf /etc/aguilas/
	@dh_install debian/conf/nginx.conf /etc/aguilas/
	@dh_install debian/conf/aguilas.sql /usr/share/dbconfig-common/data/aguilas/install/mysql
